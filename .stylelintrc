{
    "extends": "stylelint-config-recommended",
    "ignoreFiles": [
        "./src/tailwind.css"
    ],
    "rules": {
            "at-rule-no-unknown": [ true, {
                "ignoreAtRules": [
                    "extends",
                    "tailwind",
                    "define-mixin",
                    "mixin"
                ]
            }],
            "block-no-empty": null,
            "unit-whitelist": ["em", "rem", "s", "%"]
        }
}